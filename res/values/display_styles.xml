<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DisplayTheme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:shadowColor">#FFF</item>
    </style>

    <style name="Widget.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#444</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.TextView.XLarge">
        <item name="android:textSize">@dimen/textSizeXLarge</item>
        <item name="android:textColor">@color/SAgreen</item>
    </style>

    <style name="Widget.TextView.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textColor">@color/SAgreen</item>
    </style>

    <style name="Widget.TextView.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="Widget.TextView.Medium.Code">
        <item name="android:textColor">#888</item>
        <item name="android:typeface">monospace</item>
        <item name="android:singleLine">false</item>
        <!-- item name="android:layout_marginBottom">-6dp</item -->
    </style>

    <style name="Widget.TextView.Medium.Highlight">
        <item name="android:textColor">@color/highlight</item>
    </style>

    <style name="Widget.TextView.Small">
        <item name="android:textColor">#888</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="Widget.TextView.Small.Code">
        <item name="android:textColor">#888</item>
        <item name="android:typeface">monospace</item>
        <item name="android:singleLine">false</item>
        <!-- item name="android:layout_marginBottom">-6dp</item -->
        <item name="android:textSize">@dimen/textSizeCode</item>
    </style>

    <style name="Widget.TextView.Small.Code.Highlight">
        <item name="android:textColor">@color/highlight</item>
        <!-- item name="android:background">#FF0</item -->
    </style>

</resources>