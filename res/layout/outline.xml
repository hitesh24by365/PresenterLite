<?xml version="1.0" encoding="utf-8"?>
<com.stylingandroid.presenterlite.presentation.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sap="http://schemas.android.com/apk/res/com.stylingandroid.presenterlite"
    android:id="@id/slide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    sap:tweet="@string/main">

    <com.stylingandroid.presenterlite.presentation.HighlightedTextView
        style="@style/Widget.TextView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Layouts" />

    <com.stylingandroid.presenterlite.presentation.HighlightedTextView
        style="@style/Widget.TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Layout Types" />

    <com.stylingandroid.presenterlite.presentation.HighlightedTextView
        style="@style/Widget.TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FrameLayout / LinearLayout / RelativeLayout / TableLayout" />

    <com.stylingandroid.presenterlite.presentation.HighlightedTextView
        style="@style/Widget.TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="1"
        android:text="New ICS Layout" />

    <com.stylingandroid.presenterlite.presentation.HighlightedTextView
        style="@style/Widget.TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="1"
        android:text="GridLayout" />

    <com.stylingandroid.presenterlite.presentation.HighlightedTextView
        style="@style/Widget.TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="2"
        android:text="When Layouts Attack!" />

    <com.stylingandroid.presenterlite.presentation.HighlightedTextView
        style="@style/Widget.TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        sap:showAnimation="@anim/fadein"
        sap:showPhase="2"
        android:text="Case study of layout issues" />

</com.stylingandroid.presenterlite.presentation.SlideLayout>